<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/orders"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Forest_Shadow">

    <!-- Toolbar with Title and Back Button -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/orders_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/Desert_Blush"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp">

        <!-- Title -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orders"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="@color/Forest_Shadow"
            android:fontFamily="@font/grape_nuts_regular"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/chart_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:contentDescription="chart"
            android:src="@drawable/economy"
            android:layout_marginEnd="20dp"
            android:layout_gravity="end"/>


    </androidx.appcompat.widget.Toolbar>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/Desert_Blush"
        android:elevation="4dp"
        android:iconifiedByDefault="false"
        android:padding="10dp"
        android:queryHint="Search here..."
        app:iconifiedByDefault="false"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orders_toolbar" />

    <!-- RecyclerView for Cart Items -->
    <ImageButton
        android:id="@+id/calendar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:src="@drawable/calendar_orders"
        app:layout_constraintBottom_toTopOf="@+id/orders_rc"
        app:layout_constraintStart_toEndOf="@+id/search"
        app:layout_constraintTop_toBottomOf="@+id/orders_toolbar"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orders_rc"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search" />

