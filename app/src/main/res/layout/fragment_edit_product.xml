<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/product_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter product name"
        android:inputType="text"
        android:padding="8dp" />

    <EditText
        android:id="@+id/product_description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter product description"
        android:inputType="textMultiLine"
        android:padding="8dp" />

    <EditText
        android:id="@+id/product_price_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter product price"
        android:inputType="numberDecimal"
        android:padding="8dp" />


    <EditText
        android:id="@+id/product_image_url_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Image URL"
        android:inputType="textUri" />

    <EditText
        android:id="@+id/product_barcode_url_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter barcode URL"
        android:inputType="textUri" />


    <EditText
        android:id="@+id/product_categoryId_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter product category Id"
        android:inputType="text"
        android:padding="8dp" />

    <EditText
        android:id="@+id/product_stock_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter product stock"
        android:inputType="number"
        android:padding="8dp" />


    <Button
        android:id="@+id/save_product_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Product"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/delete_product_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Product"
        android:layout_marginTop="16dp"
        android:background="@color/Crimson_Wine"/>
</LinearLayout>
